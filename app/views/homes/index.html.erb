<h1>Homes#index</h1>
<%= render 'shared/flash_messages' %>
<% @users.each do |user| %>
  <div class="clearfix">
    <%= user.name %>
    <%= user.email %>
  </div>
<% end %>

<% @orders.each do |order| %>
  <div class="clearfix">
    <%= order.user_id %>
  </div>
<% end %>

<% @food_categories.each do |food_category| %>
  <div class="clearfix">
    <%= food_category.nutrient.alacarte_price %>
  </div>
<% end %>

<% @foods.each do |food| %>
  <div class="clearfix">
    <%= food.chinese_name %>
    <%= food.food_category.name %>
    <%= food.food_category.nutrient.name %>
  </div>
<% end %>

<% if user_signed_in? %>
  <h1>aaa</h1>
<% else %>
  <h1>bbb</h1>
  <div>
    <h3>Today's order</h3>
    <%= render 'shared/order_list' %>
  </div>
<% end %>
