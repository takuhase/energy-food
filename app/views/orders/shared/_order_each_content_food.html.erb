          <h6 class="col-sm-6">
            <%= date_food_relation.english_name %>
          </h6>
          <h6 class="col-sm-2">
            <%= date_food_relation.alacarte_price %>å††
          </h6>
        </div>
        <i class="col-sm-2 col-3">
