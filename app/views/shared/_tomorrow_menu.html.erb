<h1>明日のメニュー</h1>
<div class="row" id="#">
  <div class="col-sm-12 col-xs-12">
    <%= form_tag(orders_path, method: :post) do %>
      <% @categorized.each do |category, date_food_relations| %>
        <h6>これは<%= category %>だ</h6>
        <% date_food_relations.each do |date_food_relation|%>
          <label class="select-menu-<%= date_food_relation.id %>">
            <h6><%= date_food_relation.food.chinese_name %></h6>
            <h6><%= date_food_relation.food.english_name %></h6>
            <h6>RM<%= date_food_relation.food.food_category.nutrient.alacarte_price %></h6>
            <%= check_box_tag "daily_food_ids[]", "#{date_food_relation.id}" %>チェック
          </label>
        <% end %>
      <% end %>
      <%= submit_tag "注文を送信", class: 'btn btn-info btn-block' %>
    <% end %>
  </div>
</div>
