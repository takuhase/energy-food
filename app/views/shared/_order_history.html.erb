<div class="order-history">
  <h1>注文履歴</h1>
  <% @orders.zip(@ordered_foods_history) do |order, per_order| %>
    <div class="edit-delete-menu-<%= order.id %>">
      <p>
        <div>
          注文日時<%= order.created_at %>
        </div>
        <%= per_order.first.date %> 分のオーダー
        <% per_order.each do |date_food_relation| %>
          <p>
            <%= date_food_relation.chinese_name %>
            <%= date_food_relation.english_name %>
            ・・・RM<%= date_food_relation.alacarte_price %>
          </p>
        <% end %>
        <!-- 合計 RM ?? -->
      </p>
      <% if Date.today < per_order.first.date %>
        <%= link_to 'Edit', edit_order_path(order) %>
        <%= link_to "Delete", order_path(order), method: :delete, data: { confirm: "本当に取り消しますか?" } %>
      <% end %>
    </div>
  <% end %>
</div>
