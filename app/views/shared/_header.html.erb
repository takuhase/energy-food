<header class="fixed-top bg-white">
  <nav class="navbar  navbar-expand-lg navbar-light bg-white">
    <% if shop_clerk_signed_in? %>
      <%= link_to "EnergyFood", shop_clerks_root_path, class: 'navbar-brand text-success' %>
    <% else %>
      <%= link_to "EnergyFood", root_path, class: 'navbar-brand text-success' %>
    <% end %>

    <button type="button" class="navbar-toggler" data-toggle="collapse" data-target="#Navber" aria-controls="Navber" aria-expanded="false" aria-label="ナビゲーションの切替">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="Navber">
      <ul class="navbar-nav mr-auto">
        <% if user_signed_in? %>
          <%= render 'shared/header_user_signed_in' %>
        <% elsif shop_clerk_signed_in? %>
          <%= render 'shared/header_shop_clerk_signed_in' %>
        <% else %>
          <%= render 'shared/header_signed_out' %>
        <% end %>
      </ul>
    </div>
  </nav>
</header>
