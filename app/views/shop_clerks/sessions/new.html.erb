<div class="container-login text-center card">
  <h1 class="h3 mb-3 font-weight-normal">店舗スタッフログイン</h1>
  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="form-group">
      <%= f.email_field :email, autofocus: true, autocomplete: 'email', class: 'form-control', placeholder: 'メールアドレス' %>
    </div>
    <div class="form-group">
      <%= f.password_field :password, autocomplete: 'current-password', class: 'form-control', placeholder: 'パスワード',
                            required: true, minlength: @minimum_password_length, maxlength: '30' %>
    </div>
    <div class="form-group">
      <%= f.submit "ログイン", class: 'btn btn-success btn-block' %>
    </div>
  <% end %>
</div>
